<script>
$(document).ready(function(){
$('#password').hide();

$('#email').keypress(function(){
  // var designation=$(this).val();
  // console.log(designation)
  // console.log((designation == "Employee"))
  // if(designation == "Employee"){
  var char="abcdefghijklmnopqrstuvwxyz!@#$%&+-*<>ABCDEFGHIJKLMNOPQRSTUVWXYZ1234567890";
  var pass="";
  for (var i = 0; i < 8; i++) {
    var x= Math.floor(Math.random() * char.length);
    pass += char.charAt(x);
  }
  $('#pwd').val(pass);


 $('#password').show();


})
})


</script>
</head>
<body>
{{login}}
{{#if msg}}
<div class="alert alert-success alert-dismissible">
<a style="color:white; float:right;" href="#" data-dismiss="alert">&times;</a>
{{msg}}</div>{{/if}}
<div class="container">
<div class="content">
<h2>Enter respective informations given below in the fields:</h2>
    <form action="/updatecustomer" method="Post">
      <div class="form-row" >
      <div class="form-group col-md-6">
        <label for="text">First Name:</label>
        <input type="hidden" class="form-control" value="{{data.0.customerId}}" name="customerId" required>
        <input type="text" class="form-control" id="fname" placeholder="enter name" value="{{data.0.firstName}}"name="fname" required>
      </div>
      <div class="form-group col-md-6">
        <label for="text">Last Name:</label>
        <input type="text" class="form-control" id="lname" placeholder="enter last name" value="{{data.0.lastName}}" name="lname" required>
      </div>
    </div>
    <div class="form-row" >
      <div class="form-group col-md-6">
        <label for="text">Mobile no:</label>
        <input type="text" class="form-control" id="mob" placeholder=" enter moblile no" value="{{data.0.mobileNo}}" name="cmob" required>
      </div>
      <div id="msg"></div>
      <div id="email" class="form-group col-md-6">
        <label for="email">Email_id:</label>
        <input type="text" class="form-control" id="elog" placeholder="Enter email" value="{{data.0.email}}" name="logid" required>
              </div>
    </div>
    <div class="form-row" >
            <div id="password" class="form-group col-md-12">
            <label for="text">Password:</label>
            <input type="password" class="form-control" id="pwd" placeholder="Enter password" value="{{data.0.password}}" name="pass" required>
</div>
          </div>


        <button type="submit" class="btn btn-primary">Submit</button>



    </form>
  </div>
</div>

</body>
</html>
